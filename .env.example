# =============================================================================
# Agent-Bounty Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values for your environment.
# Required variables are marked with [REQUIRED], optional with [OPTIONAL].
# =============================================================================

# -----------------------------------------------------------------------------
# Core Application Settings
# -----------------------------------------------------------------------------

# [REQUIRED] Node environment: development, production, or test
NODE_ENV=development

# [OPTIONAL] Application port (default: 5000)
PORT=5000

# [OPTIONAL] Application version for error tracking and release management
APP_VERSION=1.0.0

# [OPTIONAL] Log level for debugging: debug, info, warn, error
LOG_LEVEL=info

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------

# [REQUIRED] PostgreSQL connection string
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://user:password@localhost:5432/bountyai

# -----------------------------------------------------------------------------
# Authentication & Security
# -----------------------------------------------------------------------------

# [REQUIRED] Secret key for session encryption and JWT signing
# Generate with: openssl rand -hex 32
SESSION_SECRET=your-32-character-secret-key-here

# [OPTIONAL] Comma-separated list of user IDs with admin privileges
ADMIN_USER_IDS=user-id-1,user-id-2

# -----------------------------------------------------------------------------
# Credential Vault Encryption
# -----------------------------------------------------------------------------

# [OPTIONAL] Key for encrypting stored credentials (falls back to SESSION_SECRET)
# Generate with: openssl rand -hex 32
CREDENTIAL_ENCRYPTION_KEY=your-32-character-encryption-key

# [OPTIONAL] Salt for credential encryption key derivation
CREDENTIAL_ENCRYPTION_SALT=bountyai-vault-salt

# [OPTIONAL] Master key for quantum-resistant encryption (falls back to SESSION_SECRET)
QUANTUM_MASTER_KEY=your-quantum-master-key

# -----------------------------------------------------------------------------
# Stripe Payment Integration
# -----------------------------------------------------------------------------

# [REQUIRED for payments] Stripe secret API key
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# -----------------------------------------------------------------------------
# OpenAI Integration
# -----------------------------------------------------------------------------

# [OPTIONAL] OpenAI API key for AI features (verification, execution, etc.)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key

# [OPTIONAL] Replit AI Integrations - preferred over direct OpenAI
AI_INTEGRATIONS_OPENAI_API_KEY=your-replit-ai-key
AI_INTEGRATIONS_OPENAI_BASE_URL=https://ai.replit.com/v1

# -----------------------------------------------------------------------------
# Multi-LLM Provider Support
# -----------------------------------------------------------------------------

# [OPTIONAL] Anthropic Claude API key
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# [OPTIONAL] Groq API key for fast inference
# Get from: https://console.groq.com/
GROQ_API_KEY=gsk_your_groq_key

# -----------------------------------------------------------------------------
# Blockchain Integration
# -----------------------------------------------------------------------------

# [OPTIONAL] Ethereum RPC URL (default: https://eth.llamarpc.com)
ETHEREUM_RPC_URL=https://eth.llamarpc.com

# [OPTIONAL] Polygon RPC URL (default: https://polygon.llamarpc.com)
POLYGON_RPC_URL=https://polygon.llamarpc.com

# [OPTIONAL] Arbitrum RPC URL (default: https://arb1.arbitrum.io/rpc)
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc

# -----------------------------------------------------------------------------
# Email Service (SendGrid)
# -----------------------------------------------------------------------------

# [OPTIONAL] SendGrid API key for transactional emails
SENDGRID_API_KEY=SG.your_sendgrid_api_key

# [OPTIONAL] Alternative email API key
EMAIL_API_KEY=your_email_api_key

# [OPTIONAL] From address for outgoing emails (default: noreply@bountyai.com)
EMAIL_FROM=noreply@bountyai.com

# -----------------------------------------------------------------------------
# Error Tracking (Sentry)
# -----------------------------------------------------------------------------

# [OPTIONAL] Sentry DSN for error tracking
# Get from: https://sentry.io/settings/projects/
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# -----------------------------------------------------------------------------
# PWA / Push Notifications
# -----------------------------------------------------------------------------

# [OPTIONAL] VAPID public key for web push notifications
# Generate with: npx web-push generate-vapid-keys
VITE_VAPID_PUBLIC_KEY=your-vapid-public-key

# -----------------------------------------------------------------------------
# Replit-Specific Configuration
# -----------------------------------------------------------------------------

# [AUTO-SET by Replit] Replit deployment flag
# REPLIT_DEPLOYMENT=1

# [AUTO-SET by Replit] Replit domains for CORS configuration
# REPLIT_DOMAINS=your-repl.repl.co

# [AUTO-SET by Replit] Replit development domain
# REPLIT_DEV_DOMAIN=your-dev-domain.repl.co

# [AUTO-SET by Replit] Replit ID for authentication
# REPL_ID=your-repl-id

# [AUTO-SET by Replit] Replit identity token
# REPL_IDENTITY=your-identity-token

# [AUTO-SET by Replit] Web repl renewal token
# WEB_REPL_RENEWAL=your-renewal-token

# [AUTO-SET by Replit] Connectors hostname for Stripe
# REPLIT_CONNECTORS_HOSTNAME=connectors.replit.com

# [AUTO-SET by Replit] OIDC issuer URL for authentication
# ISSUER_URL=https://replit.com/oidc

# -----------------------------------------------------------------------------
# Encryption Key (Legacy/Integrations Hub)
# -----------------------------------------------------------------------------

# [OPTIONAL] General encryption key for integrations hub
# Falls back to auto-generated key if not set
ENCRYPTION_KEY=your-32-character-encryption-key
